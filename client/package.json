{
  "name": "workspace",
  "module": "index.ts",
  "type": "module",
  "version": "0.0.0",
  "scripts": {
    "build:client": "bun run --filter=@client/ui build",
    "build:server": "bun run --filter=@client/server build"
  },
  "compileOptions": {
    "baseUrl": "./",
    "imports": {
      "@server": "./apps/server/src",
      "@ui": "./apps/client/src"
    }
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@types/bun": "^1.3.1",
    "run-p": "^0.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@types/express": "^5.0.3",
    "express": "^5.1.0",
    "socket.io": "^4.8.1"
  }
}
